{% extends "PHPTestBundle::layout.html.twig" %}

{% block main_content %}

    <div class="row">
        <div class="columns small-1 small-push-11">
            <a href="/">
                <i class="fa fa-arrow-circle-left"></i> index
            </a>
        </div>
    </div>
    <div class="row">
        <div class="small-12 columns">
            <h1>Products list</h1>
        </div>
    </div>
    <div class="row">
        <div class="small-12 columns">
            <div class="row small-up-1 medium-up-2 large-up-4">
                {% for product in products %}
                    <div class="column">
                        <a href="/product/{{ product.id }}/edit" title="Edit {{ product.name }}">
                            {% if product.imageName is not null %}
                                <img src="{{ vich_uploader_asset(product, 'imageFile') }}" class="thumbnail" alt="{{ product.name }}">
                            {% endif %}
                            <h4>{{ product.name }}</h4>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
